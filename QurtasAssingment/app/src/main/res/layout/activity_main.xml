<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:id="@+id/layoutskip"
      android:orientation="horizontal"
      android:gravity="right">
     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Skip"
         android:textStyle="bold"
         android:background="@android:color/transparent"/>

  </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutskip"
        android:layout_centerHorizontal="true"
        android:background="@drawable/header13x"
        android:layout_marginTop="@dimen/_20sdp">


        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/logo3x"
             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="pleas log-in to continue"
            android:layout_below="@+id/imgLogo"
            android:id="@+id/txtLogo"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp"
            />

      <RelativeLayout
          android:layout_width="@dimen/_200sdp"
          android:layout_height="wrap_content"
          android:layout_below="@id/txtLogo"
          android:background="@drawable/rounded_corners_white"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="@dimen/_25sdp"
          android:id="@+id/layoutloginPerameters">
          <EditText
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40sdp"
              android:hint="Email Adress"
              android:id="@+id/etEmail"
              android:background="@null"
              android:layout_marginLeft="@dimen/_10sdp"
              />
          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/md_grey_300"
              android:layout_below="@+id/etEmail"
              android:id="@+id/vMiddle"/>
          <EditText
              android:layout_width="match_parent"
              android:layout_height="@dimen/_40sdp"

              android:hint="Password"
              android:id="@+id/etPassword"
              android:layout_below="@+id/vMiddle"
              android:background="@null"
              android:layout_marginLeft="@dimen/_10sdp"/>
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Forgot?"
              android:layout_alignParentRight="true"
              android:layout_below="@+id/vMiddle"
              android:layout_marginTop="@dimen/_10sdp"
              android:layout_marginRight="@dimen/_10sdp"
              android:textStyle="bold"
              android:textColor="@color/high_blue_900"/>

      </RelativeLayout>

        <Button
            android:id="@+id/btn_LogIn"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="42dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/rounded_corners_primery"
            android:text="Log In"
            android:textAllCaps="false"
            android:textColor="#FFF"
            android:textSize="20dp"
            android:layout_below="@+id/layoutloginPerameters"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have An Account?"

            android:layout_below="@+id/btn_LogIn"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"

            android:layout_centerHorizontal="true"
            android:id="@+id/tvDtAccount"/>



        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            style="@style/Hyperlink"
            android:text="Sign-Up"
            android:textColor="@color/high_blue_900"
            android:layout_below="@+id/tvDtAccount"
            android:layout_centerHorizontal="true"
            android:id="@+id/signUp"
            android:layout_marginTop="@dimen/_10sdp"/>





    </RelativeLayout>


</RelativeLayout>
